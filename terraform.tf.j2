variable "assume_role" {
  default = "ci"
}

provider "aws" {
  region  = "{{terraform.provider_region}}"

  assume_role {
    role_arn = "arn:aws:iam::${lookup(local.account, local.environment)}:role/${var.assume_role}"
  }

  default_tags {
    tags = local.common_repo_tags
  }
}

provider "aws" {
  alias = "crypto"
  region  = "{{terraform.provider_region}}"

  assume_role {
    role_arn = "arn:aws:iam::${local.account[local.management_account[local.environment]]}:role/${var.assume_role}"
  }

  default_tags {
    tags = local.common_repo_tags
  }
}

provider "aws" {
  alias   = "management_dns"
  region  = "{{terraform.provider_region}}"

  assume_role {
    role_arn = "arn:aws:iam::${local.account[local.management_account[local.environment]]}:role/${var.assume_role}"
  }

  default_tags {
    tags = local.common_repo_tags
  }
}

// Get AWS Account ID for credentials in use
data "aws_caller_identity" "current" {}

data "aws_region" "current" {}
data "aws_availability_zones" "available" {}

locals {
  account = { {% for key, value in accounts.items() %}
    {{key}} = "{{value}}"{% endfor %}
  }

  environment = terraform.workspace == "default" ? "development" : terraform.workspace

  env_prefix = {
    development = "dev."
    qa          = "qa."
    stage       = "stg."
    integration = "int."
    preprod     = "pre."
    production  = ""
  }

  dataworks_domain_name = "{{dataworks_domain_name}}"
}

module "dataworks_common" {
  source                = "{{terraform.dataworks_common_module_name}}"
  version               = "{{terraform.dataworks_common_module_version}}"
  tag_value_environment = local.environment
}
